<svg width="341" height="400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <foreignObject x="0" y="0" width="341" height="571">
    <div xmlns="http://www.w3.org/1999/xhtml">
      <style>
        #container {
          display:flex;
          flex-direction: column;
          width: 341px;
          height: 400px;
          background-color: black;
          padding: 10px;
          font-family: Arial, sans-serif;
        }

        #container ul > li {
          color: white;
        }

        #title{
          text-align: center;
          font-size: 20px;
          color: white;
        }

        #total_titulo{
          color: #945EF3;
          font-size: 30px;
          font-weight: bold;
        }

        #total_texto{
          color: #945EF3;
          font-size: 20px;
        }

        #contribuicoes{
          color: white;
          font-size: 20px;
          margin-top: 30px;
        }

        .indicadores{
          padding-left: 27px;
          display:flex;
          flex-direction: column;

        }

        .artigos{
          font-size: 10px;
          width: 100%; 
        }

      </style>
      <div id="container">
          <h2 id="title">{{nome}} Dev.to Stats</h2>
          <div class="indicadores">
            <text id="total_titulo">{{total}}</text>
            <text id="total_texto">artigos criados</text>
            
            <text id="contribuicoes">Últimas contribuições</text>
          </div>
          <ul class="artigos_container">
            {{#articles}}
              <li class="artigos">{{title}}</li>
            {{/articles}}
          </ul>
      </div>
    </div>
  </foreignObject>
</svg>
